{
  "agent": {
    "metrics_collection_interval": 60
  },
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}"
    },
    "metrics_collected": {
      "disk": {
        "measurement": [
          "used_percent"
        ],
        "ignore_file_system_types": [
          "sysfs", "devtmpfs", "tmpfs", "overlay", "aufs", "squashfs"
        ],
        "resources": [
          "/"
        ],
        "drop_device": true,
        "metrics_collection_interval": 60
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ]
      }
    }
  }
}